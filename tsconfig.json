{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "ES2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true
   },
   "exclude": ["build", "__test__/**", "**/node_modules", "**/.*/"],
   "include": ["src/**/*"],
   "compileOnSave": true
}
